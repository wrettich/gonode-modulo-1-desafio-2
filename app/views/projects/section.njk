{% extends 'partials/layout.njk' %}

{% block body %}
<div class="wrapper">

	{% include 'partials/header.njk' %}

	<section id="main">

		<div class="container">

			{% include 'partials/project-header.njk' %}

			<section id="content">

				{% include 'partials/project-nav.njk' %}

				<article>

					<div class="project-header">
						<h1>{{currentSection.title}}</h1>
					</div>

					<div class="section-actions">
						<a href="#" data-modal-open="#edit-section">Editar</a>
						<form action="/app/projects/{{ project.id }}/sections/{{currentSection.id}}?_method=DELETE" method="POST">
							<button type="submit">Excluir Seção</button>
						</form>
					</div>
					<br>
					<div class="content">{{ currentSection.content }}</div>
				</article>
			</section>
		</div>
	</section>

	{% include 'partials/modal-section.njk' %}
	<div class="modal" id="edit-section">
		<form class="modal-content" method="POST" action="/app/projects/{{ project.id }}/sections/{{currentSection.id}}?_method=PUT">
			<input type="text" name="title" placeholder="Título da Seção" value="{{currentSection.title}}">

			<div class="content-container">
				<textarea name="content" class="mde" placeholder="Conteúdo da Secão">{{currentSection.content}}</textarea>
			</div>

			<button type="submit">Atualizar Seção</button>

			<a href="#" data-modal-close="#edit-section">Cancelar</a>
		</form>
	</div>

</div>
{% endblock %}
